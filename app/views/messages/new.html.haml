!!!
%html
  %body
    .contents
      = render template: "groups/index"
      .rightcontents
        .header
          .header__info
            %p.header__info__title #{ @group.name }
            .header__info__member
              %p Memberï¼š
              %ul
                - @users.each do |user|
                  %li #{ user.name }
          .header__edit
            %a.header__edit__button{ href: ""} edit
        .main
          .main__messages
            .main__message
            - @messages.each do |message|
              .main__message__up
                .main__message__up__name
                  = message.user.name
                .main__message__up__date
                  = message.created_at.strftime("%Y/%m/%d %H:%M:%S")
              - if message.body?
                .main__message__low
                  = message.body
              - if message.image?
                .main__message__low
                  = image_tag "#{message.image.thumb}"
              %br
        .form
          .form__box
            = form_for [@group, @message] do |f|
              .form__box__left
                .form__box__text
                  = f.text_field :body, placeholder: "type a message"
                .form__box__pic
                  = f.label :image, fa_icon('picture-o')
                .form__box__pic__botton
                  = f.file_field :image
              .form__box__right
                .form__box__send
                  = f.submit "send", class: "form__send"

